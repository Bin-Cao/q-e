&control
    calculation = 'scf'
    restart_mode='from_scratch',
    prefix='Si',
    pseudo_dir = '../../../../pseudo/',
    outdir='./out'
    verbosity = "high"
/
&system
    ibrav=2, 
    celldm(1)=10.263101844
    nat= 2, ntyp= 2,
    ecutwfc = 20.0,
    nbnd=4
